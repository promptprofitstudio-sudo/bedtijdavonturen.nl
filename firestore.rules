rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can access their own sub-profiles
      match /profiles/{profileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Stories access limits
    match /stories/{storyId} {
      // Allow create ONLY if the data.userId matches the auth uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow read/update/delete if the existing doc belongs to the user
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
